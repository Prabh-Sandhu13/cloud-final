<!DOCTYPE html>
<html>
  <head>
    <%- include ('../templates/header') -%>
  </head>
  <body>
    <%- include ('../templates/nav') -%>

    <div class="container">
        <style>
            table, th, td {
                padding: 10px;
                border: 1px solid black;
                border-collapse: collapse;
            }
        </style>
        
        <h1 class="display-4">Orders Info</h1><br>
        <table>
            <thead>
                <tr>
                    <th>Package Name </th>
                    <th>User Name </th>
                    <th>item Name </th>
                    <th>Quantity </th>
                </tr>
            </thead>
            <tbody><%orders.forEach(function(order){ %><tr>
                <td><%= order.packageId%> </td>
                <td><%= order.userId%> </td>
                <td><%= order.itemId %> </td>
                <td><%= order.qty %> </td>
                </tr><% }) %>
            </tbody>
        </table><br>

        <form action="/">
            <button class="btn btn-light">Home </button>
        </form><br>
        <form action="/searchUserOrder">
            <button class="btn btn-light">Search Orders</button>
        </form>        

    </div>  

    <%- include ('../templates/footer') -%>
  </body>
</html>