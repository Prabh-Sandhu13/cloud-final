<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../templates/header') -%>
  </head>

  <body>
    <header>
      <%- include ('../templates/nav') -%>
    </header>

    <div class="container">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/items">Items</a></li>
        <li class="breadcrumb-item active">Edit</li>
      </ol>

      <h1 class="display-4">Edit Item</h1>
      <form method="post" action="/items/editItem">
        <div class="form-group">
          <label for="itemId">Item ID</label>
          <input
            type="number"
            name="itemId"
            value="<%= item.item_id %>"
            class="form-control"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="itemName">Item Name</label>
          <input
            type="text"
            name="itemName"
            value="<%= item.item_name %>"
            class="form-control"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="quantity">Quantity on Hands</label>
          <input
            type="number"
            name="quantity"
            value="<%= item.quantity %>"
            class="form-control"
          />
        </div>
        <input type="submit" value="Submit" class="btn btn-primary" />
      </form>
    </div>

    <footer>
      <%- include ('../templates/footer') -%> <%- include ('../templates/foot')
      -%>
    </footer>
  </body>
</html>
