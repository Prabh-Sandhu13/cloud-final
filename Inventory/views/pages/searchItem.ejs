<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../templates/header') -%>
  </head>

  <body>
    <header>
      <%- include ('../templates/nav') -%>
    </header>

    <div class="container">
      <h1 class="display-4">Inventory Search</h1>

      <nav class="navbar navbar-light bg-light">
        <form
          class="form-inline"
          action="/item/search"
          method="POST"
          onsubmit="return $('#itemId').val().length > 0"
        >
          <input
            class="form-control mr-sm-2"
            type="text"
            id="itemId"
            name="itemId"
            placeholder="Enter Item ID ..."
            aria-label="Search"
          />
          <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">
            Search
          </button>
        </form>
      </nav>
    </div>

    <footer>
      <%- include ('../templates/footer') -%> <%- include ('../templates/foot')
      -%>
    </footer>
  </body>
</html>
